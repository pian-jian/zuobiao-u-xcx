swiper{
    width: 100%;
    height: 100%;
}
.fadeInTop{ animation:fadeInTop 1.2s ease-in-out 1; -webkit-animation:fadeInTop 1.2s ease-in-out 1;}
@keyframes fadeInTop{
    0%{ transform:translate(0,-200px); opacity:0;}
    100%{ transform:translate(0,0); opacity:1;}
}
@-webkit-keyframes fadeInTop{
    0%{ transform:translate(0,-200px); opacity:0;}
    100%{ transform:translate(0,0); opacity:1;}
}
.swiper-item1{
    width: 100%;
    height: 100%;
    background-image: url('http://m.zuobiao.wang/fuwu/jinrong/images/jinrong_02.jpg');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
}
.swiper-item2{
    width: 100%;
